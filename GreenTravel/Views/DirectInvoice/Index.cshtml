                                <label for="txtTaxRegistrationNumber">Quantity</label>
                                <input type="text" class="form-control " id="txtQuantity" placeholder="Night">
                            </div>
                            <div class="col-md-4">
                                <label for="txtTravelToDate">Price</label>
                                <input type="text" class="form-control " id="txtPrice" placeholder="Days">
                            </div>
                            <div class="col-md-4">
                                <label for="drpInvoiceCurrency">Currency</label>
                                <select id="drpInvoiceCurrency" class="js-states form-control" style="display: none; width: 100%">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-success">ADD</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

