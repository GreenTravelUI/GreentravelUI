@*Add Invoice Item Details Popup*@
<div class="modal fade modify-colum-model" id="AddDataModel" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <button type="button" class="close-btn" data-dismiss="modal">Close</button>
            <div class="modal-header">
                <h4 class="modal-title">Invoice Item Details</h4>
            </div>
            <div class="modal-body custom-model-body">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="txtItems">Items   <span>*</span></label>
                        <input type="text" class="form-control" id="txtItems " placeholder="Items ">
                    </div>
                    <div class="form-group">
                        <label for="txtDescription">Description <span>*</span></label>
