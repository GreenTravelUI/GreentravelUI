<style>
    .summery-uitilities-detail {
        width: 33.3333%;
        overflow: hidden;
        padding-right: 0;
    }

    .summery-nav-btn {
        background-color: #ccc;
        color: #22baa0;
        cursor: not-allowed;
        font-size: 0.7em;
        margin-left: 5px;
        padding: 5px;
        float: right;
    }

        .summery-nav-btn.active {
            background-color: #fff;
            cursor: pointer;
        }

    .summary-body p {
        margin: 0;
    }

    .summary-list .label {
        font-size: 100%;
    }

    .summary-list {
        margin-bottom: 0;
    }

        .summary-list > tbody > tr > td {
            text-align: left !important;
            width: auto;
        }

            .summary-list > tbody > tr > td:first-child {
                width: 45%;
            }

        .summary-list > tbody > tr:first-child > td {
            border-top-width: 0;
        }


    .field-list .active {
        background-color: #4fe7cd;
        color: #fff !important;
        font-weight: bolder;
        /*font-size: 14px;*/
    }

    .field-list a:hover {
        text-decoration: none;
    }

    li.content {
        list-style: outside none none;
        transition: 1s;
        border: 1px solid #22BAA0;
    }

        li.content .libody {
            transition-timing-function: linear;
        }


    .panel-red .panel-collapse, .panel-blue .panel-collapse, .panel-purple .panel-collapse, .panel-green .panel-collapse {
        border: 1px solid #F25656;
        border-radius: 0 0 5px 5px;
    }

    .panel-blue .panel-collapse {
        border: 1px solid #12AFCB;
    }

    .panel-purple .panel-collapse {
        border: 1px solid #7A6FBE;
    }

    .panel-green .panel-collapse {
        border: 1px solid #22BAA0;
    }

    .panel-group {
        margin-bottom: 0;
    }

        .panel-group .panel-red .panel-collapse .panel-body, .panel-blue .panel-collapse .panel-body, .panel-purple .panel-collapse .panel-body {
            color: #4e5e6a;
        }

        .panel-group .panel .panel-heading {
            padding: 10px;
        }

    .panel .panel-heading .panel-title {
        color: #fff !important;
        float: none;
        font-weight: normal;
        font-size: 17px;
        border-bottom-width: 0;
    }

    .panel-group .panel .panel-body h3, .panel-group .panel .panel-body h4 {
        margin: 0;
    }

    .tab-itenaries {
        border: 1px double #bec8d2 !important;
        border-radius: 5px !important;
        box-shadow: 3px 3px 7px -5px rgba(0, 0, 0, 0.5);
        margin-bottom: 15px;
        padding-bottom: 10px;
    }

        .tab-itenaries .table > tbody > tr > td {
            font-size: 12px;
            padding: 7px !important;
        }
</style>

<div class="col-md-12 form-detail">
    <div class="panel panel-white">
        <div class="panel-body">
            <div role="tabpanel">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs form-basic-tab form-tabs" role="tablist">
                    <li role="presentation" class="active" id="SearchMaster"><a href="#tab1" role="tab" data-toggle="tab" data-section="tab1" class="hosting-accord"><span class="menu-icon fa fa-search"></span>&nbsp;&nbsp;&nbsp;&nbsp;Search Master </a></li>
                    <li role="presentation" id="CreateMaster"><a href="#tab2" role="tab" data-toggle="tab" data-section="tab2" class="basic-accord"><span class="menu-icon fa fa-book"></span>&nbsp;&nbsp;&nbsp;&nbsp;<span class="tab-name">Create Master</span></a></li>
                    <li role="presentation" id="MasterFromField"><a href="#tab3" role="tab" data-toggle="tab" data-section="tab3" class="basic-accord"><span class="menu-icon fa fa-tasks"></span>&nbsp;&nbsp;&nbsp;&nbsp;<span class="tab-name">Master Form Field</span></a></li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="tab1">
                        @Html.Partial("_SearchMaster")
                    </div>
                    <div role="tabpanel" class="tab-pane " id="tab2">
                        @Html.Partial("_CreateMaster")
                    </div>
                    <div role="tabpanel" class="tab-pane " id="tab3">
                        @*<h3><span class="tab-section-name">Master Form Fields</span></h3>*@
                        <ul class="nav nav-tabs form-basic-tab form-tabs" role="tablist">
                            <li role="presentation" class="active" id="SearchMasterFormFieldli"><a href="#SearchMasterFormField" role="tab" data-toggle="tab" data-section="SearchMasterFormField" class="hosting-accord sub-tabbing"><span class="menu-icon fa fa-search"></span>&nbsp;&nbsp;&nbsp;&nbsp;Search Form Field </a></li>
                            <li role="presentation" id="CreateMasterFormFieldli"><a href="#CreateMasterFormField" role="tab" data-toggle="tab" data-section="CreateMasterFormField" class="basic-accord sub-tabbing"><span class="menu-icon fa fa-book"></span>&nbsp;&nbsp;&nbsp;&nbsp;<span class="tab-name">Create Form Field</span></a></li>
                        </ul>
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="SearchMasterFormField">
                                @Html.Partial("_SearchFromField")
                            </div>
                            <div role="tabpanel" class="tab-pane " id="CreateMasterFormField">
                                @Html.Partial("_CreateFormField")
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="modal fade modify-colum-model" id="DeleteModel" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">System Message</h4>
                    </div>

                    <div class="modal-body  custom-model-body">
                        <form>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label id="lbldelete"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-success" id="modeldelete">Ok</button>
                                <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

